<h1>
  List of all actors
</h1>

<form action="/insert_actor">
  <div>
    <label for="name_box">
      Name
    </label>

    <input placeholder="Juan Perez" type="text" id="name_box" name="query_name">
  </div>

  <div>
    <label for="dob_box">
      DOB
    </label>
  
    <input placeholder="2096-01-19" type="text" id="dob_box" name="query_dob">
  </div>

  <div>
    <label for="bio_box">
      Bio
    </label>

    <textarea placeholder="long bio..." id="bio_box" name="query_bio" rows="3"></textarea>
  </div>

  <div>
    <label for="image_box">
      Image
    </label>

    <input placeholder="Image URL" id="image_box" name="query_image">
  </div>


  <button>
    Add actor
  </button>
</form>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_actors.each do |an_actor| %>
  <tr>
    <td>
      <%= an_actor.id %>
    </td>

    <td>
      <img src="https://robohash.org/<%= an_actor.image %>?set=set3">
    </td>

    <td>
      <%= an_actor.name %>
    </td>

    <td>
      <%= an_actor.dob %>
    </td>

    <td>
      <a href="/actors/<%= an_actor.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
